extends ../../../views/layout

block content
  div.container
    div.row
      div.col-md-12.col-md-offset-.5
        h1!= title
        div.well
          hr
          - if (messages.error)
            div.alert.alert-danger.alert-dismissable
              button(type="button", class="close", data-dismiss="alert", aria-hidden="true") &times;
              span= messages.error
          form(method="post" action="/newcourse")
            div.form-group
              p Introduce porfavor el nombre del curso, frecuencia y hora  
              br 
              p Ejemplo: Verificacion y validacion, L,M,V, V1 
              label(for="name") Curso:
              input(type="text", name="name", id="name").form-control
            div.form-group
              button(type="submit").pull-rigth.btn.btn-success Enviar