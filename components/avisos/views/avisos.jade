extends ../../../views/layout

block content
  header
  br 
  div.col-md-10.col-md-offset-.5
    a(href="/newaviso").btn.btn-primary.pull-right Agregar Avisos  
      sapn.glyphicon.glyphicon-plus
  br
  div.container 
    div.row
      div.col-md-12.col-md-offset-.5
        h1.text-center Administracion de avisos
        br
        div.form-group
          div.table
            table.table.table-striped
              tr 
                td Aviso
                td Materia
                td Fecha 
                td Acciones
              each result in results 
                tr 
                  td!= result.aviso
                  td= result.materia
                  td= result.created
                  td 
                    a(href="/editaviso/" + result._id).btn.btn-primary Editar 
                      span.glyphicon.glyphicon-edit
                    br
                    br
                    a(data-toggle="modal" data-target="#myModal1").btn.btn-danger Eliminar 
                      sapn.glyphicon.glyphicon-remove
                    form(method="post", action="/deleteaviso/" + result._id)
                      div(class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
                        div(class="modal-dialog")
                          div(class="modal-content")
                            div(class="modal-header")
                              button(class="close" data-dismiss="modal")
                                span(aria-hidden="true") &times;
                                  span(class="sr-only") Close
                              h4(class="modal-title" id="myModalLabel") Desea eliminar el aviso?
                            div(class="modal-body")
                              p Esta seguro que desea eliminar el aviso?
                              div!= result.aviso
                            div(class="modal-footer")
                              button(data-dismiss="modal").btn.btn-default Cancelar
                                button(type="submit").btn.btn-danger Eliminar