extends ../../../views/layout

block content
  header
    br 
    div.col-md-8.col-md-offset-2
      a(href="/courses").btn.btn-success.pull-left Regresar     
        sapn.glyphicon.glyphicon-arrow-left
  div(id="newcourse").container
    div.row
      div.col-md-6.col-md-offset-3
        h1.text-center!= title
        div(id="formnewcourse")
          - if (messages.error)
            div.alert.alert-danger.alert-dismissable
              button(type="button", class="close", data-dismiss="alert", aria-hidden="true") &times;
              span= messages.error
          form(method="post" action="/newcourse")
            div.form-group
              p Introduce porfavor el nombre del curso, frecuencia y hora  
              br 
              p Ejemplo: Verificacion y validacion, L,M,V, V1
              br
              label(for="name") Curso:
            input(type="text", name="name", id="name" value=result.name).form-control
            br
           div.form-group
              button(type="submit").btn.btn-success.pull-right Editar  
                span.glyphicon.glyphicon-edit