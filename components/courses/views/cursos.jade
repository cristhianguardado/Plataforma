extends ../../../views/layout

block content
  header
    br 
    div.col-md-10.col-md-offset-.5
      a(href="/newcourse").btn.btn-primary.pull-right Agregar Curso 
        sapn.glyphicon.glyphicon-plus
  br
  div.container 
    div.row
      div.col-md-10.col-md-offset-1
        h1.text-center Administracion de Cursos
        br
        div.form-group
          div.table
            table.table.table-striped
              tr 
                td Nombre 
                td Acciones
              each result in results 
                tr 
                  td= result.name 
                  td 
                    a(href="/editcourse/" + result._id).btn.btn-primary Editar 
                      span.glyphicon.glyphicon-edit
                    br
                    br
                    a(data-toggle="modal" data-target="#myModal"+ result._id).btn.btn-danger.pull-left Eliminar 
                      span.glyphicon.glyphicon-remove
                    form(method="post", action="/deletecourse/" + result._id)
                      div(class="modal fade" id="myModal"+result._id tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
                        div(class="modal-dialog")
                          div(class="modal-content")
                            div(class="modal-header")
                              button(class="close" data-dismiss="modal")
                                span(aria-hidden="true") &times;
                                  span(class="sr-only") Close
                              h4(class="modal-title" id="myModalLabel") Desea eliminar el curso?
                            div(class="modal-body")
                              p Esta seguro que desea eliminar el curso?
                              p!= result.name
                            div(class="modal-footer")
                              button(data-dismiss="modal").btn.btn-default Cancelar
                                button(type="submit").btn.btn-danger Eliminar