extends ../../../views/layout

block content
  div(id="recover").container
    div.row
      div.col-lg-5.col-lg-offset-4
        h1.text-center= title
        br
        h4 Introduce tu correo electronico para recivir un correo de recuperacon.
        br
        - if (messages.error)
          div.alert.alert-danger.alert-dismissable
            button(type="button", class="close", data-dismiss="alert", aria-hidden="true") &times;
            span= messages.error
        - if (messages.envio)
          div.alert.alert-success.alert-dismissable
            button(type="button", class="close", data-dismiss="alert", aria-hidden="true") &times;
            span= messages.envio    
        form(action="/recoverpassword", method="post", role="form").form-group
          div.form-group
            label(for="email") Email:
            input(type="email", name="email", id="email").form-control
          button(type="submit").btn.btn-success.pull-right Enviar 
            span.glyphicon.glyphicon-envelope